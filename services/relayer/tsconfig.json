{
  "compilerOptions": {
    "target": "es2020", 
    "module": "commonjs", 
    "lib": ["es2020", "dom"],
    "strict": true, 
    "esModuleInterop": true, 
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
